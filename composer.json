{
    "name": "genkgo/mail",
    "description": "Library to send e-mails over different transports and protocols (like SMTP) using immutable messages and streams. Also includes SMTP server.",
    "license": "MIT License",
    "require": {
        "php": "^7.1",
        "ext-intl": "*"
    },
    "require-dev": {
        "ext-openssl": "*",
        "friendsofphp/php-cs-fixer": "^2.9",
        "phpstan/phpstan": "^0.7.0",
        "phpunit/phpunit": "~6",
        "predis/predis": "~1.0"
    },
    "authors": [
        {
            "name": "frederik",
            "email": "f.bosch@genkgo.nl"
        }
    ],
    "suggest": {
        "predis/predis": "Use redis to queue messages",
        "ext-openssl": "Sign your messages with DKIM"
    },
    "autoload": {
        "psr-4": {
            "Genkgo\\Mail\\": ["src"]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Genkgo\\TestMail\\": ["test"]
        }
    },
    "scripts": {
        "lint": "vendor/bin/php-cs-fixer fix --verbose ."
    },
    "scripts-descriptions": {
        "lint": "Run PHP-CS-Fixer and make changes to comply with code style standards"
    }
}
